<style>
  :root {
    --primary-color: #222;
    --secondary-color: #444;
    --background-color: #fff;
    --text-color: #e0e0e0;
    --card-bg: #1a1a1a;
    --hover-color: #555;
    --border-radius: 8px;
    --box-shadow: 0 2px 4px rgba(255, 255, 255, 0.1);
    --transition: all 0.3s ease;
  }

  body {
    font-family: 'Poppins', sans-serif;
    background-color: var(--background-color);
    color: var(--text-color);
    line-height: 1.6;
  }

  .main {
    padding: 60px 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .bread-crumb {
    background-color: var(--card-bg);
    border-radius: var(--border-radius);
    padding: 15px;
    margin-bottom: 30px;
    box-shadow: var(--box-shadow);
  }

  .bread-crumb a {
    color: var(--text-color);
    text-decoration: none;
    transition: var(--transition);
  }

  .bread-crumb a:hover {
    color: var(--hover-color);
  }

  .dashboard-container {
    display: flex;
    gap: 30px;
  }

  .dashboard-menu {
    flex: 0 0 250px;
    background-color: var(--card-bg);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    padding: 20px;
  }

  .dashboard-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .dashboard-menu ul li {
    margin-bottom: 10px;
  }

  .dashboard-menu ul li a {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    color: var(--text-color);
    text-decoration: none;
    border-radius: var(--border-radius);
    transition: var(--transition);
  }

  .dashboard-menu ul li a:hover,
  .dashboard-menu ul li a.active {
    background-color: var(--secondary-color);
    color: var(--text-color);
  }

  .dashboard-menu ul li a i {
    margin-right: 10px;
    font-size: 18px;
  }

  .dashboard-content {
    flex: 1;
  }

  .card {
    background-color: var(--card-bg);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    overflow: hidden;
    transition: var(--transition);
  }

  .card:hover {
    box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
  }

  .card-header {
    background-color: var(--primary-color);
    color: var(--text-color);
    padding: 15px 20px;
    font-size: 18px;
    font-weight: 600;
  }

  .card-body {
    padding: 20px;
  }

  .btn-primary {
    background-color: var(--primary-color);
    color: var(--text-color);
    border: none;
    padding: 10px 20px;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: var(--transition);
    cursor: pointer;
  }

  .btn-primary:hover {
    background-color: var(--secondary-color);
  }

  @media (max-width: 768px) {
    .dashboard-container {
      flex-direction: column;
    }

    .dashboard-menu {
      margin-bottom: 20px;
    }
  }



  .address-item {
    background-color: var(--card-bg);
    padding: 20px;
    margin-bottom: 20px;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    color: var(--text-color);
  }

  .address-item h4 {
    margin-bottom: 10px;
    font-weight: bold;
  }

  .address-item p {
    margin-bottom: 5px;
  }

  .text-primary {
    color: #007bff;
    text-decoration: none;
  }

  .text-danger {
    color: #dc3545;
    text-decoration: none;
  }

  .text-primary:hover,
  .text-danger:hover {
    text-decoration: underline;
  }





  .dashboard-container {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr; /* Menu, Content, and Extra Section */
    gap: 30px;
}

.dashboard-content {
    grid-column: 2; /* This will make it take the second section (the main content area) */
}

.extra-data {
    grid-column: 3; /* This will take the third section on the right */
    background-color: var(--card-bg);
    padding: 20px;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    color: var(--text-color);
}

.extra-data h3 {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 15px;
}

@media (max-width: 768px) {
    .dashboard-container {
        grid-template-columns: 1fr; /* Stack all sections on mobile */
    }

    .extra-data {
        grid-column: 1; /* Take full width on mobile */
    }
}

</style>
<main class="main">
  <div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
      <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
        Home
        <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
      </a>

      <a href="/userProductList" class="stext-109 cl8 hov-cl1 trans-04">
        Products
        <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
      </a>
      <span class="stext-109 cl4">Account Details</span>
    </div>

    <div class="dashboard-container">
      <!-- Left Side Menu -->
      <div class="dashboard-menu">
        <ul class="nav flex-column" role="tablist">
          <li class="nav-item">
            <a class="nav-link" id="account-detail-tab" data-bs-toggle="tab" href="/userProfile" role="tab"
              aria-controls="account-detail" aria-selected="true">
              <i class="fi-rs-user mr-10"></i>Account details</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="/orderList" role="tab"
              aria-controls="orders" aria-selected="false">
              <i class="fi-rs-shopping-bag mr-10"></i>Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab" href="#track-orders" role="tab"
              aria-controls="track-orders" aria-selected="false">
              <i class="fi-rs-shopping-cart-check mr-10"></i>Track Your Order</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" id="address-tab" data-bs-toggle="tab" href="/myAddress" role="tab"
              aria-controls="address" aria-selected="true">
              <i class="fi-rs-marker mr-10"></i>My Address</a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="fi-rs-sign-out mr-10"></i>Logout</a>
          </li>
        </ul>
      </div>

      <!-- Main Content (Center Section) -->
      <div class="dashboard-content">
        <div class="card">
          <div class="card-header">My Address</div>
          <div class="card-body">
            <p>Manage your shipping addresses for a smoother checkout experience.</p>
            <a href="/addAddress" class="btn-primary mt-4">Add New Address</a>
          </div>
        </div>
        <% for(i=0;i<address.length;i++){ %>
        <div class="card mt-4">
         
          <div class="card-body">
            <div class="address-item">
              <h4>Address Type: <%= address[i].addressType %></h4>
              <p><strong>House Name:</strong> <%= address[i].houseName %></p>
              <p><strong>Street:</strong> <%= address[i].street %> </p>
              <p><strong>Landmark:</strong><%= address[i].landmark %></p>
              <p><strong>City:</strong> <%= address[i].city %></p>
              <p><strong>District:</strong> <%= address[i].district %></p>
              <p><strong>State:</strong> <%= address[i].state %></p>
              <p><strong>Zip Code:</strong> <%= address[i].zipCode %></p>
              <p><strong>Mobile Number:</strong> <%= address[i].mobileNumber %></p>
              <p><strong>Alternate Mobile Number:</strong> <%= address[i].altMobileNumber %></p>
              <a href="/editAddress/<%= address[i]._id %>" class="text-primary">Edit</a> | <button onclick="deleteAddress(event,'<%= address[i]._id%>')" class="text-danger">Delete</button>
            </div>
          </div>
          
        </div>
        <% } %>
      </div>

      <!-- Extra Data Section (Right Side) -->
      <div class="extra-data">
        <h3>Additional Information</h3>
        <p>This section can be used for any additional user-related information, special offers, or any other relevant data that you want to show to the user.</p>
      </div>
    </div>
  </div>
</main>

<%- include('../../views/partials/user/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const currentPath = window.location.pathname;
    const menuItems = document.querySelectorAll('.dashboard-menu a');
    menuItems.forEach(item => {
      if (item.getAttribute('href') === currentPath) {
        item.classList.add('active');
      }
    });
  });
</script>


<script>

function deleteAddress(event,addressId){
  event.preventDefault();
  // add conformation dialogue
  Swal.fire({
    title:'Are you sure?',
    text:'you wonot not be able to revert this!',
    icon:'warning',
    showConfirmButton:true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText:'Yes, delete it',

  }).then((result) =>{
    if(result.isConfirmed){
      deleteAddressAjax(addressId)
    }
  })
}

function deleteAddressAjax(addressId){
  

  $.ajax({
    url:`/deleteAddress/${addressId}`,
    type:'DELETE',
    dataType:'json',
    contentType:'application/json',
    data:JSON.stringify({}),


    success:function(response){
if(response.success){
    Swal.fire({
                    toast:true,
                    position:'center',
                    icon:'success',
                    title:'Success',
                    text:response.message,
                    showConfirmButton:false,
                    timer:1500,
                    customClass:'center-toast',


                }) .then(() =>{
                    window.location.href=response.redirectURL;
                });
}
               
            },

            error: function(xhr, status, error) {

                Swal.fire({
                toast: true,
                position: 'top',
                icon: 'error',
                title: 'Error',
                text: xhr.responseJSON ? xhr.responseJSON.error : 'An error occurred',
                showConfirmButton: false,
                timer: 1500,
                customClass: 'center-toast',
            });
        }
  })
}

</script>
