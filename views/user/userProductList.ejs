	.search-container {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 50px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    max-width: 800px;
    margin: 0 auto;
    overflow: hidden;
    border: 1px solid #e0e0e0;
    padding-right: 5px; /* Added padding for submit button */
}

/* Search Icon Button Styles */
.search-icon-btn {
    background: none;
    border: none;
    padding: 12px 15px;
    display: flex;
    align-items: center;
    color: #666;
    cursor: pointer;
}

.search-icon-btn i {
    font-size: 20px;
}

/* Search Input Styles */
.search-input {
    flex: 1;
    border: none;
    outline: none;
    padding: 12px 15px;
    font-size: 16px;
    background: transparent;
    min-width: 0; /* Prevents input from overflowing */
}

/* Submit Button Styles */
.search-submit-btn {
    background-color: #6c7ae0;
    color: white;
    border: none;
    padding: 8px 24px;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 25px;
    margin: 5px;
    white-space: nowrap;
    font-weight: 500;
}

.search-submit-btn:hover {
    background-color: #5562c7;
    transform: translateY(-1px);
}

/* Responsive Design */
@media (max-width: 768px) {
    .search-container {
        max-width: 90%;
        margin: 0 auto;
    }

    .search-submit-btn {
        padding: 8px 16px;
        font-size: 14px;
    }
}

@media (max-width: 480px) {
    .search-container {
        flex-direction: column;
        border-radius: 15px;
        padding: 10px;
    }
    
    .search-input {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
    }
    
    .search-submit-btn {
        width: calc(100% - 10px);
        margin: 5px;
        border-radius: 8px;
        padding: 10px;
    }
    
    .search-icon-btn {
        padding: 8px;
    }
}

/* Focus States */
.search-container:focus-within {
    box-shadow: 0 3px 12px rgba(108, 122, 224, 0.2);
    border-color: #6c7ae0;
}

/* Placeholder Color */
.search-input::placeholder {
    color: #999;
}

/* Input Text Color */
.search-input {
    color: #333;
}
</style>


	
